<!-- res/drawable/transparent_outline_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
        </shape>
    </item>
    <!-- Outline border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#FFC107" android:width="3dp" /> <!-- Black outline with 2dp width -->
        </shape>
    </item>
</layer-list>